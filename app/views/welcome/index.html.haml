    = component 'seo/schema', type: :person, name: 'Jonas H√ºbotter', email: 'me@jonhue.me', address: 'Berlin', gender: 'male', job_title: 'Software Developer', url: 'https://jonhue.me', image: 'https://jonhue.me/512x512.png', description: 'A student, a dangerously passionate open-source developer, an engineer adoring user-oriented and innovative design.'

%section#home.myg-wrap--large
    %h1.lg Hey, it's me :)
    %p.lg A student, a dangerously passionate open-source developer, an engineer adoring user-oriented and innovative design.
    .myg-button--container
        = link_to 'Apps', '', class: 'myg-button'
        = link_to 'Tweets', 'https://twitter.com/jhubotter', class: 'myg-button myg-button--secondary', target: '_blank'
        = link_to 'Code', 'https://github.com/jonhue', class: 'myg-button myg-button--secondary', target: '_blank'

%section#apps
    .myg-wrap--large
        %h2.lg Apps
        .myg-grid
            - @apps.each do |app|
                .myg-card
                    = link_to app, class: 'myg-card--top' do
                        = image_tag app.logo
                    .myg-card--bottom
                        .wrapper
                            .myg-badge--container
                                - if app.released_at && app.released_at > Time.now - 1.month
                                    %p.myg-badge.success New! üöÄ
                                - if app.beta
                                    %p.myg-badge.error Beta üî•
                                - if app.url
                                    %p.myg-badge Web
                                - if app.android
                                    %p.myg-badge Android
                                - if app.ios
                                    %p.myg-badge iOS
                                - if app.windows
                                    %p.myg-badge Windows
                                - if app.chrome
                                    %p.myg-badge Chrome
                            %h3= app.name
                            %p= app.description
                        = link_to 'Learn more', app, class: 'myg-button myg-button--secondary'

%section#subscribe
    .myg-wrap--phone
        %h1.sm You'll enjoy clicking.
        = link_to 'Get notified when something is happening üéâ', '', class: 'myg-button'
        .flex.reverse
            %p.sm * I'm afraid, I can't promise.

%section#writing
    .myg-wrap--tablet
        - @posts.each_with_index do |post, index|
            %h1.sm= post.title
            .myg-badge--container
                %p.myg-badge= post.platform
            %p= post.content[0..750].html_safe + '...'
            %p= link_to 'Continue reading', post.url
            - unless index == @posts.count - 1
                %hr
        .wrapper
            = link_to 'Even more writing üìñ', '', class: 'myg-button myg-button--secondary', target: '_blank'

%section#open-source
    .myg-wrap--large
        %h2.lg Open Source
        .myg-grid
            - @repositories.each do |repository|
                .myg-card
                    .myg-card--top
                    .myg-card--bottom
                        .wrapper
                            .myg-badge--container
                                - if repository.created_at > Time.now - 1.month
                                    %p.myg-badge.success New! üöÄ
                                - if repository.discontinued
                                    %p.myg-badge.error Discontinued
                                - elsif repository.updated_at > Time.now - 1.day
                                    %p.myg-badge.error On... üî•
                                %p.myg-badge
                                    = repository.language
                                - if repository.stars > 0
                                    %p.myg-badge
                                        = repository.stars
                                        ‚≠êÔ∏è
                            %h3= repository.name
                            %p= repository.description
                            %p.sm= link_to "Updated #{time_ago_in_words(repository.updated_at)} ago", repository.github, class: 'hyperlink--inherit'
                        = link_to 'Learn more', repository, class: 'myg-button myg-button--secondary'

